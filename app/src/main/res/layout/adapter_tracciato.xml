<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/adapter_tracciato_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Titolo Traccia" />

            <TextView
                android:id="@+id/adapter_tracciato_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_tracciato_text_name"
                android:text="@string/adapter_tracciato_num_boe" />

            <TextView
                android:id="@+id/adapter_tracciato_num_boe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_tracciato_text_name"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/adapter_tracciato_etichetta"
                android:layout_toRightOf="@id/adapter_tracciato_etichetta"
                android:text="1" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>